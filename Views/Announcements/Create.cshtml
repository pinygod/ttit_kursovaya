@model kekes.Data.Models.Announcement

@{
    ViewData["Title"] = "Create";
}

<div class="mainContainer col-9 p-2 border rounded ps-3 pe-3 pb-4">
    <h1>Создать новое объявление</h1>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-5">
                    <label asp-for="Title" class="control-label">Название</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="Text" class="control-label">Описание</label>
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between w-100 mt-3">
                    <input type="submit" value="Create" class="btnSubmit btn btn-dark" />
                    <a asp-action="Index"  class="text-secondary end-100 text-end mt-4">Вернуться к списку объявлений</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
