@model kekes.Data.Models.Announcement

@{
    ViewData["Title"] = "Delete";
}

<div class="mainContainer col-9 p-2 border rounded ps-3 pe-3 pb-4">


    <h3>Вы действительно хотите удалить это объявление?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Название
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                Описание
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Text)
            </dd>
        </dl>

        <form asp-action="Delete" class="d-flex justify-content-between w-100 mt-3">
            <div class="align-self-end">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <a asp-action="Index"  class="text-secondary end-100 text-end mt-4">Вернуться к списку объявлений</a>         
        </form>

    </div>
</div>

