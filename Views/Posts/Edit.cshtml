@using kekes.Models
@model PostEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="mainContainer col-9 p-2 border rounded ps-3 pe-3 pb-4">
<h1>Редактирование поста</h1>

<hr />
<div class="row">
    <div class="col-md-12 w-100">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group w-50">
                <label asp-for="@Model.Name" class="control-label">Название</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group  w-50">
                <label asp-for="@Model.Text" class="control-label">Описание</label>
                <input asp-for="@Model.Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between w-100 mt-3">
                <input type="submit" value="Сохранить" class="btnSubmit btn btn-dark" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="text-secondary end-100 text-end mt-4">Вернуться к посту</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
