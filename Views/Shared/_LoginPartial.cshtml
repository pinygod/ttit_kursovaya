@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="navLinks nav-item">
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Привет, @User.Identity?.Name!</a>
    </li>
    <li class="navLinks nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Sections", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-light">Выход</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="navLinks nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li class="nav-item">
        <a class="navLinks nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}
</ul>


