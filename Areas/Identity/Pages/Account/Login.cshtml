@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row w-100 d-flex justify-content-center">
    <div class="mainContainer d-flex justify-content-center col-5 p-2 border rounded ps-3 pe-3 pb-2">    
        <div class="col-md-6">
            <h1 class="text-center">Вход</h1>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label text-secondary"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label text-secondary">Пароль</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button id="LogInSubmit" type="submit" class="w-100 mt-3 btn btn-lg btn-dark">Войти</button>
                    </div>
                    <div class="mt-2 text-center">
                        <p>
                            <a class="text-light" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
                        </p>
                    </div>
                </form>
         </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
